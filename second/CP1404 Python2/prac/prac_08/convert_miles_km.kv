BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '34'
            font_size: 48
            multiline: False
        BoxLayout:
            orientation: 'vertical'
            Button:
                text: 'Up'
                # the following line specifies the function in the app class to call when the button is pressed
                # on_press: app.handle_calculate(input_number.text)
            Button:
                text: 'Down'

    Button:
        text: 'Convert miles to km'
        on_press: app.handle_convert(input_number.text)
    Label:
        text: app.message
        color: (1, 1, 0, 1)